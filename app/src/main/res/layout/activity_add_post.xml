<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".AddPost">


    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/camera" />

            </GridLayout>

          <!-- One Question -->
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Room Type"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size"
              android:textStyle="bold" />

          <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
              android:id="@+id/room_type"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="0dp"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal"
              android:paddingTop="@dimen/small_margin">

              <RadioButton
                  android:id="@+id/living_room"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="living Room"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/private_room"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="Private Room"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/entire_place"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="Entire Place"
                  android:textStyle="bold" />
          </info.hoang8f.android.segmented.SegmentedGroup>

          <!-- One Question -->
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Room Type"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size"
              android:textStyle="bold" />

          <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
              android:id="@+id/house_type"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="0dp"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal"
              android:paddingTop="@dimen/small_margin">

              <RadioButton
                  android:id="@+id/house"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="House"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/town_house"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="Town House"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/apartment"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="Apartment"
                  android:textStyle="bold" />
          </info.hoang8f.android.segmented.SegmentedGroup>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Total Badroom Amounts"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size"
              android:textStyle="bold" />

          <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bedroom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="0dp"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal"
              android:paddingTop="@dimen/small_margin">

              <RadioButton
                  android:id="@+id/bed_zero"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bed_one"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="1"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bed_two"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="2"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bed_three"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="3"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bed_four_plus"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="4+"
                  android:textStyle="bold" />
          </info.hoang8f.android.segmented.SegmentedGroup>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Total Badroom Amounts"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size"
              android:textStyle="bold" />

          <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bathroom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="0dp"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal"
              android:paddingTop="@dimen/small_margin">

              <RadioButton
                  android:id="@+id/bath_zero"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bath_one"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="1"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bath_two"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="2"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bath_three"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="3"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/bath_four_plus"
                  style="@style/RadioButton"
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="4+"
                  android:textStyle="bold" />
          </info.hoang8f.android.segmented.SegmentedGroup>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Lease Length"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size"
              android:textStyle="bold" />

          <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
              android:id="@+id/lease_length"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="0dp"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal"
              android:paddingTop="@dimen/small_margin">

              <RadioButton
                  android:id="@+id/annual"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="annual"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/quaterly"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="Quaterly"
                  android:textStyle="bold" />

              <RadioButton
                  android:id="@+id/short_term"
                  style="@style/RadioButton"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:text="Short"
                  android:textStyle="bold" />
          </info.hoang8f.android.segmented.SegmentedGroup>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Start Date"
              android:textColor="@color/black"
              android:textStyle="bold" />


          <CalendarView
              android:id="@+id/calendarView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Facilities"
              android:textColor="@color/black"
              android:textStyle="bold" />

          <CheckedTextView
              android:id="@+id/AC"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="AC"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/allow_pet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="Allow Pets"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/Parking"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="Parking"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/TV"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="TV"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/video_game"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="Video Game"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/gym"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="Gym"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/laundry"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="Building Laundry"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />

          <CheckedTextView
              android:id="@+id/bus"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:checkMark="@drawable/checked"
              android:checked="false"
              android:paddingLeft="24dp"
              android:paddingTop="@dimen/middle_margin"
              android:text="Bus"
              android:textColor="@color/black"
              android:textSize="@dimen/m_font_size" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:paddingTop="@dimen/large_margin"
              android:text="Description"
              android:textColor="@color/black"
              android:textStyle="bold" />

          <EditText
              style="@style/Widget.AppCompat.EditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="24dp"
              android:layout_marginTop="0dp"
              android:gravity="top"
              android:hint="More information about the place"
              android:lines="8" />

          <Button
              android:id="@+id/submit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center"
              android:text="Submit" />


      </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>