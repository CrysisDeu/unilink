<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="0"
        android:background="#6d48e5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/back_button"
            android:gravity="center_vertical"
            android:text="Post"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/house_button_favorite"
            android:layout_width="@dimen/small_icon_side"
            android:layout_height="@dimen/small_icon_side"
            android:layout_marginEnd="@dimen/small_margin"
            android:background="@drawable/selector_favorite_btn"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/back_button"
            android:tint="#ffffff"
            app:srcCompat="@drawable/ic_back"
            style="@style/back_button"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/house_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/house_image"
                android:layout_width="match_parent"
                android:layout_height="240dp">

            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/house_type"
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/m_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/house_title"
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/l_font_size"
                android:textStyle="bold" />

            <RelativeLayout
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/large_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house_address"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="bottom"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m_font_size" />

                    <TextView
                        android:id="@+id/house_poster"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="top"
                        android:text="posted by kevin"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m_font_size" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/house_poster_image"
                    android:layout_width="@dimen/large_icon_side"
                    android:layout_height="@dimen/large_icon_side"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/my_bg" />

            </RelativeLayout>

            <TextView
                android:id="@+id/house_description"
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_margin"
                android:text="this is the sample display UI for house post, not completed yet. lot of parts is under construction"
                android:textColor="@color/black"
                android:textSize="@dimen/s_font_size" />

            <View style="@style/separate_line" />

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available_room" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/house_rooms"
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/roommate" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/house_roommate"
                style="@style/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facility" />

            <GridLayout
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4">

                <!-- Ac -->
                <LinearLayout
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_row="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_ac" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/ac" />

                        <TextView
                            android:id="@+id/house_ac"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- heating -->
                <LinearLayout
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_row="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_pets" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/pet" />

                        <TextView
                            android:id="@+id/house_pet"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- parking -->
                <LinearLayout
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_parking" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/parking" />

                        <TextView
                            android:id="@+id/house_parking"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- bus -->
                <LinearLayout
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_bus" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/bus" />

                        <TextView
                            android:id="@+id/house_bus"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- TV -->
                <LinearLayout
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_row="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_tv" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/tv" />

                        <TextView
                            android:id="@+id/house_tv"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Game -->
                <LinearLayout
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_row="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_video_game" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/Game" />

                        <TextView
                            android:id="@+id/house_game"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Gym -->
                <LinearLayout
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_gym" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/gym" />

                        <TextView
                            android:id="@+id/house_gym"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

                <!-- laundry -->
                <LinearLayout
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="0"
                        android:src="@drawable/ic_laundry" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/category"
                            android:text="@string/laundry" />

                        <TextView
                            android:id="@+id/house_laundry"
                            style="@style/data" />

                    </LinearLayout>

                </LinearLayout>

            </GridLayout>

            <View style="@style/separate_line" />

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <com.teamxod.unilink.MapContainer
                android:id="@+id/map_container"
                android:layout_height="240dp"
                android:layout_width="match_parent">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/house_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:name="com.google.android.gms.maps.MapFragment" />

            </com.teamxod.unilink.MapContainer>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="0"
        android:background="@drawable/bottom_bar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/large_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/house_bottom_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="$ 1000 "
                    android:textColor="@color/black"
                    android:textSize="@dimen/m_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="@string/bottom_per_month"
                    android:textColor="@color/black"
                    android:textSize="@dimen/m_font_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/house_bottom_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="Annual Lease Â· Start in May"
                android:textColor="@color/black"
                android:textSize="@dimen/m_font_size" />

        </LinearLayout>

        <Button
            android:id="@+id/house_button_contact"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/round_button"
            android:text="@string/button_contact"
            android:fontFamily="sans-serif-regular"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/m_font_size"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>