<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/house_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/house_image"
                android:layout_width="match_parent"
                android:layout_height="240dp">
            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/house_type"
                style="@style/house_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_margin"
                android:text="3B2B Â· Town House"
                android:textColor="@color/black"
                android:textSize="@dimen/m_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/house_title"
                style="@style/house_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beautiful Town House in a Quiet Area Near UTC"
                android:textColor="@color/black"
                android:textSize="@dimen/l_font_size"
                android:textStyle="bold" />

            <RelativeLayout
                style="@style/house_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/large_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="bottom"
                        android:text="Costa Verde, San Diego"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m_font_size" />

                    <TextView
                        android:id="@+id/house_poster"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="top"
                        android:text="posted by kevin"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m_font_size" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/house_poster_image"
                    android:layout_width="@dimen/large_icon_side"
                    android:layout_height="@dimen/large_icon_side"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/my_bg" />

            </RelativeLayout>

            <TextView
                style="@style/house_content"
                android:id="@+id/house_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_margin"
                android:text="this is the sample display UI for house post, not completed yet. lot of parts is under construction"
                android:textColor="@color/black"
                android:textSize="@dimen/s_font_size" />

            <View style="@style/separate_line"/>

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available_room" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/house_rooms"
                style="@style/house_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View style="@style/separate_line"/>

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/roommate" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/house_roommate"
                style="@style/house_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View style="@style/separate_line"/>

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facility" />

            <LinearLayout
                style="@style/house_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/house_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:contentDescription="@string/tv"
                        android:src="@drawable/icon_tv" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|top"
                        android:text="@string/tv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/house_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:contentDescription="@string/wifi"
                        android:src="@drawable/icon_wifi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|top"
                        android:text="@string/wifi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/house_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:contentDescription="@string/bus"
                        android:src="@drawable/icon_bus" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|top"
                        android:text="@string/bus"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/house_gym"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:contentDescription="@string/gym"
                        android:src="@drawable/icon_gym" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|top"
                        android:text="@string/gym"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/house_game"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:contentDescription="@string/game"
                        android:src="@drawable/icon_game" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|top"
                        android:text="@string/game"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/house_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/middle_icon_side"
                        android:layout_height="@dimen/middle_icon_side"
                        android:contentDescription="@string/AC"
                        android:src="@drawable/icon_ac" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|top"
                        android:text="@string/AC"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s_font_size" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/separate_line"/>

            <TextView
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <com.google.android.gms.maps.MapView
                style="@style/house_content"
                android:id="@+id/house_map"
                android:layout_width="match_parent"
                android:layout_height="240dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp" />


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/large_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/house_bottom_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="$ 1000 "
                    android:textColor="@color/black"
                    android:textSize="@dimen/m_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="@string/bottom_per_month"
                    android:textColor="@color/black"
                    android:textSize="@dimen/m_font_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/house_bottom_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="Annual Lease Â· Start in May"
                android:textColor="@color/black"
                android:textSize="@dimen/m_font_size" />

        </LinearLayout>

        <Button
            android:id="@+id/house_button_contact"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/round_button"
            android:text="@string/button_contact"
            android:textColor="@color/white"
            android:textSize="@dimen/m_font_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:alpha="0.95"
        android:background="@drawable/bottom_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/house_post"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/house_button_favourite"
            android:layout_width="@dimen/small_icon_side"
            android:layout_height="@dimen/small_icon_side"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/icon_more"
            android:contentDescription="@string/button_favorite" />

        <ImageButton
            android:id="@+id/house_button_back"
            android:layout_width="@dimen/small_icon_side"
            android:layout_height="@dimen/small_icon_side"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_back"
            android:contentDescription="@string/button_back"/>

    </RelativeLayout>


</RelativeLayout>