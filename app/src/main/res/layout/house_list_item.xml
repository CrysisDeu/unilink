<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/small_margin"
    android:paddingHorizontal="24dp"
    >



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
                <ToggleButton
                    android:id="@+id/favorite_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textOn=""
                    android:textOff=""
                    android:text=""
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/selector_favorite_btn"/>
                <ImageView
                    android:id="@+id/house_list_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/my_bg" />
        </FrameLayout>



        <TextView
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:textSize="@dimen/m_font_size"
            android:textStyle="bold"
            tools:text="single room . town house" />


        <TextView
            android:id="@+id/room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:textSize="@dimen/l_font_size"
            android:textStyle="bold"
            tools:text="beautiful bedroom" />


        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:textSize="@dimen/m_font_size"
            tools:text="$1199/MO Annual lease" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:textSize="@dimen/m_font_size"
            tools:text="Costa Verde, San Diego"
            android:layout_marginBottom="16dp"/>


</LinearLayout>